{
  "name": "quick_launcher",
  "version": "0.0.1",
  "description": "A quick launcher for various applications using Electron and TailwindCSS.",
  "main": "main.js",
  "scripts": {
    "build-css": "npx tailwindcss -i ./renderer/styles.css -o ./renderer/tailwind.css",
    "start": "npm run build-css && electron .",
    "dist": "npm run build-css && electron-builder -mwl"
