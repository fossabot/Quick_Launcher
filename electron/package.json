{
  "name": "quick_launcher",
  "version": "0.0.1",
  "description": "A quick launcher for various applications using Electron and TailwindCSS.",
  "main": "main.js",
  "scripts": {
    "build-css": "npx tailwindcss -i ./renderer/styles.css -o ./renderer/tailwind.css",
    "start": "npm run build-css && electron .",
    "dist": "npm run build-css && electron-builder"
  },
  "author": "Jie Hua",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6"
  }
}
