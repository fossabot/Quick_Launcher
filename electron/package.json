    "autoprefixer": "^10.4.19",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2"
  },
  "build": {
    "linux": {
